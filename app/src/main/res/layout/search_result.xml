<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ReRead Book Shop"
        android:textColor="@color/textColor"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Sell Price"
        android:padding="6dp"
        android:text="$100"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/bname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sname"
        android:text="Computer Champ"
        android:textColor="@color/textColor"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bname"
        android:text="Will Smith"
        android:textColor="@color/textColor"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/navigate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bname"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/markedtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bmrp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Marked Price:"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bmrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bauthor"
        android:layout_toEndOf="@+id/markedtext"
        android:layout_toRightOf="@+id/markedtext"
        android:padding="6dp"
        android:text="$100"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        android:textStyle="italic" />
</RelativeLayout>